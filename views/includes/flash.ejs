<style>
    .alert{
        width: 50%;
        /* height: 60px; */
        padding-bottom: 10px;
        align-items: center;
    }
</style>

<% if (success_msg && success_msg.length > 0) { %> 
    <div class="alert alert-success offset-3 alert-dismissible" role="alert">
    <p><%=success_msg%></p>
     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div> 
<%}%>
<% if (error_msg && error_msg.length > 0) { %> 
    <div class="alert alert-danger offset-3 alert-dismissible" role="alert">
    <p><%=error_msg%></p>
     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div> 
<%}%>

